//-Modal
#buyModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#buyModalLabel.cart-modal-title Cart Buy
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      #cart-modal-body.modal-body
        p.first Buy All Items in the Cart?
        p.second Buy All Items in the Cart?
      .modal-footer
        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
        button.btn.btn-primary(type='button')
          a(href='/payment' style='text-decoration: none;color:black') Buy
#cartModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='cartModalLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#item-modal-title.modal-title Item Added to Cart.
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      #item-modal-body.modal-body
        | Item successfully added to cart!
        | Please continue your shopping.
      .modal-footer
        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
